<core:View xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m"
	controllerName="view.Main" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout"
	xmlns:custom="view"
	>
	<Page title="UI5 XML View Template">
		<content>
			<custom:Sprite src="view/img_trans.gif" 
						   spriteSrc="view/deer-sprite.png"
						   width="280px"
						   height="473px"
						   densityAware="false"
						   steps="8"
						   delayMs="100"
						   stepWidth="280"
						   id="idSprite"
						   press="onSpritePress"
						   repeat="false"
							/>
				
			
			<List items="{/cities}" id="idList">
				<StandardListItem title="{name}"/>
			</List>
			<l:HorizontalLayout>
				<Button text="remove" press="onBtnRemovePress"/>
				<Button text="add" press="onBtnAddPress"/>
			</l:HorizontalLayout>
			
			<l:VerticalLayout>
				<Label id="idLabelTest" text="label"/>
				<Button text="Animate label" press="doSomething"/>
			</l:VerticalLayout>
		</content>
	</Page>
</core:View>